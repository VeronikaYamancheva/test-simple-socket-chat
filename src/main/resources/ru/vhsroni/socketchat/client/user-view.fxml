<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vhsroni.socketchat.client.ClientController">
    <children>
        <VBox fx:id="rootVBox" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Label text="Nickname:" />
                      <TextField fx:id="nicknameField" promptText="Введите никнейм" />
                  <Button  fx:id="setNicknameButton" onAction="#setNicknameWithButton" mnemonicParsing="false" text="set nickName" />
               </children>
            </HBox>
                <TextArea fx:id="logArea" editable="false" prefHeight="414.0" prefWidth="600.0" />
                <HBox alignment="CENTER">
                    <children>
                        <TextField fx:id="messageField" promptText="Введите сообщение" />
                        <Button fx:id="sendButton" onAction="#sendMessage" text="Отправить" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
